.container-fluid
  .jumbotron.text-center
    %h1 StackJFlow
    = image_tag("mario-block.png", size: "50x50")

  .nav-justified
    = link_to 'Create A Question', new_question_path, class: "btn btn-primary"
    - if session[:current_user_id]
      = link_to 'Logout', logout_path, data: {confirm: 'Are you sure you want to logout?'}, class: "btn btn-danger"
    - else
      = link_to 'Login', root_path, class: "btn btn-warning"
  %br/
  %br/
  %fieldset
    %legend Community Questions
    .text-center
      - @questions.each do |question|

        %strong= link_to "#{question.title}", question_path(question)
        %br/
        %p= "Posted by: #{question.user.username}"
        %p= "Created at: #{question.created_at}"
        %br/
        %br/
= paginate @questions
